        "/stats": {
            "get": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Get the total count of active users. Requires API key.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
